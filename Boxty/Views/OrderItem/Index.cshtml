@model IEnumerable<OrderItem>

@{
    ViewData["Title"] = "Index";
}

        <div class="row mt-5 mb-5" style="overflow-y: auto;">

            @foreach (var s in Model)
            {
                <div class="col-lg-4 col-md-4 mb-4">
                    <div class="card h-100">
                        <img class="card-img-top w-100" src="@s.ImageUrl" style="height: 250px; " alt="@s.Title">
                        <div class="card-body">
                            <h4 class="card-title d-flex justify-content-between">
                                <small>Title: @s.Title</small>
                                <small>Type: @s.Type</small>
                            </h4>
                            <hr />
                            <p class="card-text">@s.Summary</p>
                        </div>
                        <div class="card-footer">
                            <a small class="text-muted card-link" id="@s.Title" asp-controller="OrderItem" asp-action="Details" asp-route-id="@s.Id" as>Go to Meal</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="mt-5">
        </div>