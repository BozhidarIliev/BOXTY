@model Boxty.ViewModels.ShoppingCartViewModel

    <div class="row checkoutForm">
        @if (Model.ShoppingCart.Items.Count == 0)
        {
            <h2>Your shopping cart is empty</h2>
        }
        else
        {
            <h2>Your shopping cart</h2>
            <h4>Here are the products in your shopping cart.</h4>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Selected amount</th>
                        <th>Product</th>
                        <th class="text-right">Price</th>
                        <th class="text-right">Subtotal</th>
                        <th class="text-right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var line in Model.ShoppingCart.Items)
                    {
                    <tr>
                        <td class="text-center">@line.Amount</td>
                        <td class="text-left">@line.Product.Name</td>
                        <td class="text-right">@line.Product.Price.ToString("c")</td>
                        <td class="text-right">
                            @((line.Amount * line.Product.Price).ToString("c"))
                        </td>
                        <td>
                            <div class="btn-group ">
                                <a class="btn btn-danger" asp-controller="ShoppingCart" asp-action="RemoveFromCart" asp-route-productId="@line.Product.Id">Remove</a>
                            </div>

                        </td>
                    </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" class="text-right">Total:</td>
                        <td class="text-right">
                            @Model.ShoppingCartTotal.ToString("c")
                        </td>
                    </tr>
                </tfoot>
            </table>

            <div class="text-right">
                <div class="btn-group ">
                    <a class="btn btn-success" asp-controller="ShoppingCart" asp-action="Checkout">Check out</a>
                </div>
            </div>
        }
    </div>