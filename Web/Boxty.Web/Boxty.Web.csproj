    <ProjectReference Include="..\Boxty.Web.ViewModels\Boxty.Web.ViewModels.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="Areas\Driver\Views\Driver\Index.cshtml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
    <Content Update="Areas\KitchenStaff\Views\KitchenStaff\Index.cshtml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
