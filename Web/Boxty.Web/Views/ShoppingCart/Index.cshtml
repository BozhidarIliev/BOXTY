@inject Microsoft.AspNetCore.Identity.SignInManager<Boxty.Data.Models.BoxtyUser> signInManager;
@inject Boxty.Services.IUserService userService; 
    <div class="row checkoutForm">

        <h2>Your shopping cart</h2>
        <h4>Here are the products in your shopping cart.</h4>
        <table class="table table-bordered table-striped" id="shoppingCart">
            <thead>
                <tr>
                    <th>Product Id</th>
                    <th>Product</th>
                    <th>Amount</th>
                    <th>Price</th>
                    <th class="text-right">Subtotal</th>
                    <th class="text-right">Actions</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <td colspan="4" class="text-right">Total:</td>
                    <td class="text-right" id="total"></td>
                </tr>
            </tfoot>
        </table>

        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>

                    <div class="modal-body">
                        <form id="commentForm">
                            @model Boxty.Web.ViewModels.AddCommentViewModel
                            <input type="hidden" id="productId" value="">
                            <div class="form-group">
                                <p>Write your comment here</p>
                                <input asp-for="@Model.Comment" class="form-control" />
                                <span asp-validation-for="@Model.Comment" class="text-danger"></span>
                            </div>

                        </form>
                    </div>

                    <div class="modal-footer">
                        <a  class="btn btn-success" onclick="addComment()" data-dismiss="modal">Add</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-right">
            <div class="btn-group ">
                <a type="submit" class="btn btn-success" asp-controller="ShoppingCart" asp-action="Checkout">Checkout</a>
            </div>
        </div>

    </div>

@section Scripts
{
    <script>
        $(document).ready(function () {
            initShoppingCart();
        });

        function deleteItem(productId) { // TODO!
            $.ajax({
                type: "DELETE",
                url: "/api/ShoppingCart?id=" + productId + "",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    //toastr.success('Insert POS line success for item: ' + productName, 'Success');
                },
                failure: function (xhr, status, error) {
                },
                error: function (xhr, status, thrownError) {
                    alert('Error ' + thrownError + " " + xhr.status);
                }

            })
            initShoppingCart()
        }

        function initShoppingCart() {
            $.ajax({
                type: "GET",
                url: "/api/ShoppingCart",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {

                    $('#shoppingCart > tr').slice(0).remove();

                    $.each(data.items, function (i, item) {
                        var rows = "<tr>" +
                            "<td>" + item.product.id + "</td>" +
                            "<td>" + item.product.name + "</td>" +
                            "<td>" + item.amount + "</td>" +
                            '<td>' + item.product.price + '</td>' +
                            '<td>' + item.subtotal + '</td>' +
                            '<td><button type="button" onclick="deleteItem(\'' + item.product.id + '\')" class="btn btn-danger">Remove</button> <button type="button" onclick="showCommentBox(\'' + item.product.id + '\')" class="btn btn-info">Comment</button></td>' +
                            "</tr>";

                        $('#shoppingCart').append(rows);
                        $('#total').html(data.total);
                    });
                },

                failure: function (data) {
                    alert(data.responseText);
                },
                error: function (data) {
                    alert('Error ' + data.responsetext);
                }
            });
        }

        function showCommentBox(id) {
            $("#myModal").modal();
            $("#productId").value = id;
        }

        function addComment() {
            document.getElementById("commentForm").submit();
        }

        $("#commentForm").submit(function (e) {
            e.preventDefault();
            var data = $(this)

            $.ajax({
                type: "POST",
                url: "/api/ShoppingCart",
                data: data.serialize(),
                contentType: "application/json; charset=utf-8",
                success: function (data) {

                },

                failure: function (data) {
                    alert(data.responseText);
                },
                error: function (data) {
                    alert('Error ' + data.responsetext);
                }
            });

            initShoppingCart();
        })

    </script>
}