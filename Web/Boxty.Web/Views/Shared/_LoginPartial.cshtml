@using Microsoft.AspNetCore.Identity
@inject SignInManager<Boxty.Data.Models.BoxtyUser> SignInManager
@inject UserManager<Boxty.Data.Models.BoxtyUser> UserManager
@inject IServiceProvider serviceProvider;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor contextAccessor;

@{
    var cart = await Boxty.Services.Data.SessionHelper.GetObjectFromJsonAsync<Boxty.Data.Models.ShoppingCart>(contextAccessor.HttpContext.Session, Boxty.Common.GlobalConstants.ShoppingCart) ?? null ;
    var countOfItemsInCart = 0;
    if (cart != null)
    {
        countOfItemsInCart = cart.Items.Count();
    }
}

    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Home" asp-action="Profile" asp-route-userId="@UserManager.GetUserId(User)">Hello @string.Concat(User.Identity.Name.First().ToString().ToUpper(), User.Identity.Name.Substring(1))!</a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@(this.Url.Action("Index", "Home", new { area = string.Empty }))">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>
            @if (User.IsInRole(Boxty.Common.GlobalConstants.Driver))
            {
                <li class="dropdown">
                    <button class="dropbtn">Driver Panel</button>
                    <div class="dropdown-content">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Driver" asp-action="Index">Index</a>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Driver" asp-action="RolesList">Index2</a>
                    </div>
                </li>
            }
            @if (User.IsInRole(Boxty.Common.GlobalConstants.Admin))
            {
                <li class="dropdown">
                    <button class="dropbtn">Admin Panel</button>
                    <div class="dropdown-content">
                        <a class="nav-link text-dark" asp-area="Administration" asp-controller="Admins" asp-action="UsersList">Users</a>
                        <a class="nav-link text-dark" asp-area="Administration" asp-controller="Admins" asp-action="RolesList">Roles</a>
                    </div>
                </li>
            }
        }
        else { 
            <li>
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
        }
    </ul>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <a href="/ShoppingCart">
        <i class="fa" style="font-size:24px">&#xf07a;</i>
        @if (countOfItemsInCart != 0)
        {
            <span class='badge badge-warning' id='lblCartCount'> @countOfItemsInCart </span>
        }
    </a>
</body>
